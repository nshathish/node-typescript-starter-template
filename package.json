{
  "name": "node-typescript-starter-template",
  "version": "1.0.0",
  "description": "A basic template to quickly setup a node project with typescript",
  "main": "index.js",
  "scripts": {
    "dev:best": "tsc-watch --onSuccess \"node ./dist\"",
    "dev:alterone": "ts-node src/index.ts",
    "dev:start:alterone": "nodemon",
    "dev:watch-ts": "tsc -w",
    "dev:altertwo": "concurrently -k -n \"Typescript, Node\" -c \"yellow.bold, cyan.bold\" \"npm run dev:watch-ts\" \"nodemon ./dist/server/js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nshathish/node-typescript-starter-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nshathish/node-typescript-starter-template/issues"
  },
  "homepage": "https://github.com/nshathish/node-typescript-starter-template#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.2"
  }
}